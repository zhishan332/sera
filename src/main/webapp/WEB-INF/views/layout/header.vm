        });
    })

    function showLogin() {
        var htmlStr = '<form class="ui form" style="margin: 20px"><h4 class="ui dividing header">登录</h4><div class="required field"><label>手机号</label><input placeholder="请输入手机号" type="text"></div><div class="required field"><label>密码</label><input type="password"></div><div class="ui green submit button">登录</div><div class="ui black  button" id="closeLoginBtn">取消</div></form>';
        var index = layer.open({
            type: 1,
            title: false,
            closeBtn: 1,
            area: ['600px', '260px'],
            shadeClose: true,
            content: htmlStr
        });
        $('#closeLoginBtn').click(function () {
            layer.close(index);
        });
    }

    function showRegist() {
        var htmlStr = '<form class="ui form" style="margin: 20px"><h4 class="ui dividing header">新用户注册</h4><div class="required field"><label>手机号</label><input placeholder="请输入手机号" type="text"></div><div class="two fields"><div class="required field"><label>验证码</label><input placeholder="请输入收到的6位验证码" type="text"></div><div class="field" style="margin-top:22px"><div class="ui submit button">获取验证码</div></div></div><div class="required field"><label>密码</label><input type="password"></div><div class="required field"><label>重复输入密码</label><div class="ui icon input"><input type="password"></div></div><div class="ui green submit button">注册</div><div id="closeRegistBtn" class="ui black  button">取消</div></form>';
        var index = layer.open({
            type: 1,
            title: false,
            closeBtn: 1,
            area: ['600px', '400px'],
            shadeClose: true,
            content: htmlStr
        });
        $('#closeRegistBtn').click(function () {
            layer.close(index);
        });
    }

</script>